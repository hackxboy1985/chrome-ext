{
  "name": "BigBang",
  "description": "xxxxxx!",
  "version": "1.0",
  "manifest_version": 3,
  
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
   {
     "matches": ["https://*.amazon.com/*", "https://*.baidu.com/*"],
     "js": [ "pageAndRequestMap.js","content-script.js"],
	 "css": ["my-styles.css"],
     "run_at": "document_start" 
	 
   }
 ],
 "web_accessible_resources": [
    {
	/** åŽŸ
	 "resources": ["pageAndRequestMap.js","inject.js","interceptXHRorFETCH.js"],
	 */
     "resources": ["pageAndRequestMap.js","interceptXHRorFETCH.js"],
     "matches": ["https://*.amazon.com/*", "https://*.baidu.com/*"]
   }
  ],
  "host_permissions":["*://*.amazon.com/*","*://*.baidu.com/*"],
  "permissions": ["contextMenus","storage", "tabs", "activeTab", "scripting","debugger","webRequest"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "options_page": "options.html",
  "devtools_page": "devtools.html"
}
